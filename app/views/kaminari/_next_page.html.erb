<%# Link to the "Next" page
  - available local variables
    url:           url to the next page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<span class="next border border-[#F1F1F1] bg-white size-8 *:size-full rounded-lg flex justify-center items-center text-sm font-semibold">
  <%= link_to_unless current_page.last?, t('views.pagination.next').html_safe, url, rel: 'next', remote: remote, **local_assigns.slice(:data), class: "flex justify-center items-center" %>
</span>
