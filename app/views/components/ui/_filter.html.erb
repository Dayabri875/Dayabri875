<div data-controller="ui--filter">
<%= render_card do %>
  <div class="flex items-center w-full">
  <%= content_for :filter_icon %>
  <%= render_input name: "filter", placeholder: "Buscar CNPJ", variant: :borderless, class: input_class, data: {"ui--filter-target": "source", action: "input->ui--filter#filter", target: "document"} %></div>
  <%= render_separator %>
  <div class="<%= options[:class] %>">
    <%= content_tag :div, role: "group" do
      items.each do |item| %>
        <button type="button" data-action="order#getClient" data-order-target="select" data-ui--filter-target="item" data-value="<%= item[:name] %>"><%= list_item(value: item[:value], name: item[:name], selected: item[:selected]) %></button>
      <% end
    end %>
  </div>
<% end %>
</div>
